/* Stili globali */
body {
    font-family: Arial, sans-serif;
    background-color: #f9fafb;
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Contenitore principale della chat */
#chat-container {
    width: 400px;
    height: 600px;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

/* Intestazione */
#chat-header {
    background-color: #007bff;
    color: white;
    font-size: 18px;
    font-weight: bold;
    padding: 16px;
    text-align: center;
}

/* Contenitore messaggi */
#chat-box {
    flex-grow: 1;
    padding: 16px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 12px;
    background-color: #f9fafb;
}

/* Rimuovi puntini dalla lista dei messaggi */
.messages {
    list-style-type: none; /* Rimuove i puntini */
    padding: 0; /* Rimuove il padding interno */
    margin: 0; /* Rimuove il margine esterno */
}

/* Messaggi dell'utente (grigio chiaro) */
.user-message {
    background-color: #f1f1f1;
    color: #333;
    padding: 12px 16px;
    border-radius: 20px;
    max-width: 75%;
    align-self: flex-end;
    font-size: 14px;
    line-height: 1.5;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
}

/* Messaggi del bot (blu con testo bianco) */
.bot-message {
    background-color: #007bff;
    color: white;
    padding: 12px 16px;
    border-radius: 20px;
    max-width: 75%;
    align-self: flex-start;
    font-size: 14px;
    line-height: 1.5;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
}

/* Barra di input */
#user-input-container {
    display: flex;
    align-items: center;
    padding: 12px;
    background-color: #ffffff;
    border-top: 1px solid #e0e0e0;
}

/* Campo di input */
#user-input {
    flex-grow: 1;
    padding: 10px 14px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 20px;
    outline: none;
    transition: border-color 0.2s;
}

#user-input:focus {
    border-color: #007bff;
}

/* Pulsante di invio */
#send-btn {
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 20px;
    padding: 10px 20px;
    margin-left: 10px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s;
}

#send-btn:hover {
    background-color: #0056b3;
}

.bot-button {
    display: inline-block;      /* o inline-flex */
    margin: 5px 0;             /* un po' di spazio intorno */
    padding: 8px 12px;         /* dimensioni del bottone */
    background-color: #eee;    /* sfondo grigio chiaro */
    color: #333;               /* testo scuro */
    border: 1px solid #ccc;    /* bordo chiaro */
    border-radius: 20px;       /* angoli arrotondati */
    cursor: pointer;           /* puntatore a forma di mano */
    font-size: 14px;
    transition: background-color 0.3s;
}

.bot-button:hover {
    background-color: #ddd;    /* hover leggermente pi√π scuro */
}
